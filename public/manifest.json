  "name": "Concerto - Music App",
  "short_name": "Concerto",
  "description": "Professional music streaming, production, and discovery platform",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#8b5cf6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["music", "entertainment", "productivity"],
  "icons": [
